<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/student_head_portrait"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/fzu"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher_user"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/student_input_name"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="手机/用户名"
                android:maxLines="2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher_lock"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/student_input_password"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLines="2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/student_register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="注册账号"
                />

            <Button
                android:id="@+id/student_forget_password_button"
                android:layout_width="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="忘记密码"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/student_login_button"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:text="登陆"
                android:textSize="30dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            >

            <Button
                android:id="@+id/student_back_button"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:text="取消"
                android:textSize="30dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>